    style E3 fill:#4a90d9,stroke:#2c5f8a,color:#fff
    style E4 fill:#4a90d9,stroke:#2c5f8a,color:#fff
    style EN fill:#4a90d9,stroke:#2c5f8a,color:#fff
    style Doc fill:#d9944a,stroke:#a66a2a,color:#fff
    style Employees fill:#6ab86a,stroke:#4a9e4a,color:#fff
    style Sources fill:#6ab86a,stroke:#4a9e4a,color:#fff
